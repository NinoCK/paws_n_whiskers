<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs'); %>
    <title>Register</title>
    
    <style>
        .message-container h1{
            font-size: 2.5rem;
            padding-top: 20px;
            padding-bottom: 20px;
            color: #48C5B5;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container h2{
            font-size: 2rem;
            padding-top: 20px;
            padding-bottom: 20px;
            color: #48C5B5;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .btn {
            background-color: #48C5B5;
            font-weight: bold;
            border-color: #48C5B5;
            color: white;
        }
        .btn:hover {
            background-color: #3EA99F;
            border-color: #3EA99F;
        }
        .btn:active {
            background-color: #3EA99F;
            border-color: #3EA99F;
        }
        .container a{
            color: #48C5B5;
        }
        .form{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form-control{
            min-width: 300px;
            width: 350px;
        }
        .form-control:focus {
            border-color: #48C5B5;
            box-shadow: 0 0 0 0.25rem rgba(72, 197, 181, 0.25);
        }
        .invalid-field{
            color:#48C5B5;
        }
        .form-horizontal{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .form-horizontal .form{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 350px;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <div class="row message-container">
        <h1 class="text-center">Register</h1>
    </div>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form method="post" action="/register" class="form-horizontal">
              <% 
              let formFields = [
                {label: 'Username', type: 'text', id: 'username', name: 'username', placeholder: 'Username'},
                {label: 'Password', type: 'password', id: 'password', name: 'password', placeholder: 'Password'},
                {label: 'Repeat Password', type: 'password', id: 'password2', name: 'password2', placeholder: 'Repeat Password'},
                {label: 'Email', type: 'text', id: 'email', name: 'email', placeholder: 'Email'},
                {label: 'Repeat Email', type: 'text', id: 'email2', name: 'email2', placeholder: 'Repeat Email'},
                {label: 'First Name', type: 'text', id: 'firstName', name: 'first_name', placeholder: 'First Name'},
                {label: 'Last Name', type: 'text', id: 'lastName', name: 'last_name', placeholder: 'Last Name'},
                {label: 'Address', type: 'text', id: 'address', name: 'address', placeholder: 'Address'},
                {label: 'Phone', type: 'text', id: 'phone', name: 'phone', placeholder: 'Phone'}
              ];
              %>
              
              <% formFields.forEach(field => { %>
                <div class="form mb-2">
                  <label for="<%= field.id %>" class="form-label"><%= field.label %></label>
                </div>
                <div class="form mb-2">
                  <input type="<%= field.type %>" class="form-control" id="<%= field.id %>" name="<%= field.name %>" placeholder="<%= field.placeholder %>">
                </div>
              <% }) %>
            <div class="form mb-2">
              <button type="submit" class="btn">Submit</button>
            </div>
            <div class="text-center mt-3">
              <p>Already have an account? <a href="/login" style="color:#48C5B5">Log In</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
      <%- include('../partials/footer.ejs'); %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>