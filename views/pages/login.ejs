<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs'); %>
    <title>Login</title>
    <style>
        .message-container h1{
            font-size: 2.5rem;
            padding-top: 20px;
            padding-bottom: 20px;
            color: #48C5B5;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container h2{
            font-size: 2rem;
            padding-top: 20px;
            padding-bottom: 20px;
            color: #48C5B5;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form-container{
            display: flex;
            justify-content: center;
            align-items: center;
            
        }
        .btn {
            background-color: #48C5B5;
            font-weight: bold;
            border-color: #48C5B5;
            color: white;
        }
        .btn:hover {
            background-color: #3EA99F;
            border-color: #3EA99F;
        }
        .btn:active {
            background-color: #3EA99F;
            border-color: #3EA99F;
        }
        .container a{
            color: #48C5B5;
        }
        .form{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form-control{
            min-width: 340px;
            
        }
        .form-control:focus {
            border-color: #48C5B5;
            box-shadow: 0 0 0 0.25rem rgba(72, 197, 181, 0.25);
        }
        .invalid-field{
            color:#48C5B5;
        }
        .forgot{
            color: #48C5B5;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <div class="row message-container">
        <h1 class="text-center">Welcome</h1>
    </div>
    <div class="form-container">
        <div class="row justify-content-center ">
          <div class="col-md-6">
            <form method="post" action="/login">
                <div class="form mb-2">
                    <label for="username" class="form-label">Username</label>
                </div>
                <div class="form mb-2">
                    <input name= "username" type="text" class="form-control" id="username" placeholder="Enter your username">
                </div>
                <a class="form mb-2 forgot" href="#">Forgot username?</a>
                <div class="form mb-2">
                    <label for="password" class="form-label">Password</label>
                </div>
                <div class="form mb-2">
                    <input name="password" type="password" class="form-control" id="password" placeholder="Enter your password">
                </div>
                <a class= "form mb-2 forgot" href="#">Forgot password?</a>
                <div class="text-center">
                    <button type="submit" class="btn">Login</button>
                </div>
            </form>
            <div class="text-center mt-3">
              <p>Not a member yet? <a class="forgot" href="/register">Sign up</a></p>
            </div>
          </div>
        </div>
      </div>
    <%- include('../partials/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>